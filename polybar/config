[colors]
background = #16161C
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #F43E5C
secondary = #e60053
alert = #bd2c40

[bar/abyss]
monitor = ${env:MONITOR:}
width = 100%
height = 25
bottom = false
padding-right = 2
module-margin = 1

background = #00000000
foreground = ${colors.foreground}

font-0 = FiraCode:style=Regular:size=9;1
font-2 = Dina:style=Regular:pixelsize=13;1
font-1 = FontAwesome:style=Regular:size=8;1

modules-left = bspwm
modules-right = xkeyboard battery pulseaudio date powermenu

[module/bspwm]
